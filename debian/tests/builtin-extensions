#!/usr/bin/ruby3.2


extensions = [
  ["dbm"],
  ["fiddle"],
  ["gdbm"],
  ["openssl", '>= 3.0.0'],
  ["psych"],
  ["zlib"],
  ["debug"],
  ["rbs"],
]

failed = 0
extensions.each do |ext|
  begin
    gem *ext
    require ext.first
    puts "Extension #{ext.join(" ")}: OK"
  rescue LoadError
    failed += 1
  end
end

exit(failed == 0 ? 0 : 1)
