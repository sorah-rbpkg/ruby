#!/usr/bin/ruby3.3


extensions = [
  ["fiddle"],
  ["openssl", '>= 3.0.0'],
  ["psych"],
  ["zlib"],
  ["debug"],
  ["rbs"],
]

failed = 0
extensions.each do |ext|
  begin
    gem *ext
    require ext.first
    puts "Extension #{ext.join(" ")}: OK"
  rescue LoadError => ex
    puts "Extension #{ext.join(" ")}: FAIL"
    puts ex
    failed += 1
  end
end

exit(failed == 0 ? 0 : 1)
