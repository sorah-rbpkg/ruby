root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*.gemspec]
indent_size = 2
indent_style = space

[*.rb]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space
